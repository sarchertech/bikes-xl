<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <%= partial "partials/main_nav" %>
    <div class="content"> 
      <div class="layout">
        <div class="layout-main">
          <div class="layout-main__wrap">
            <%= link_to current_page.data.category.titleize, category_path(current_page.data.category), class: "layout-main__category" %>
            <time class="layout-main__time"><%= current_page.date.strftime('%b %e, %Y') %> </time>
          </div>
          <h1 class="layout-main__title"><%= current_page.data.title %></h1> 
          <%= partial "partials/_share" %>
          <img class="layout-main__img" src= <%= current_page.data.image %>>
          <div class="layout-main__text">
            <%= yield %>
          </div>
          <%= partial "partials/_share" %>
          <div class="tags">
            <h2 class="tags__title"> Labels: </h2>
            <% current_page.data.tags.each do |tag| %>
              <a><%= link_to(tag.titleize, tag_path(tag), class: "tags__item") %></a>
            <% end %> 
          </div>
          <%= partial "partials/_similar" %>
        </div>
        <div class="layout-side">
        </div>
      </div>
    
    </div>
  </body>
  <%= partial "partials/_footer" %>
</html>
